{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "rootDir": "./",
        "baseUrl": "./src",
        "outDir": "./dist",
        "paths": {
            "@shared/*": [
                "shared/*"
            ],
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    }
}